-- -- Criar Banco
CREATE DATABASE db_detran;
USE db_detran;

-- Tabela agentetransito
CREATE TABLE agentetransito (
    Matricula INT PRIMARY KEY,
    Nome VARCHAR(255),
    DataContratacao DATE,
    TempoServico INT
);

-- Tabela categoria
CREATE TABLE categoria (
    CategoriaID INT PRIMARY KEY,
    Nome VARCHAR(255)
);

-- Tabela endereco
CREATE TABLE endereco (
    id INT PRIMARY KEY,
    bairro VARCHAR(255),
    CEP VARCHAR(10),
    cidade VARCHAR(255),
    estado VARCHAR(2)
);

-- Tabela infracao
CREATE TABLE infracao (
    InfracaoID INT PRIMARY KEY,
    Placa VARCHAR(10),
    DataHora DATETIME,
    TipoID INT,
    LocalID INT,
    VelocidadeAferida INT,
    AgenteID INT
);

-- Tabela local
CREATE TABLE local (
    LocalID INT PRIMARY KEY,
    Latitude DECIMAL(10, 8),
    Longitude DECIMAL(11, 8),
    VelocidadePermitida INT
);

-- Tabela modelo
CREATE TABLE modelo (
    ModeloID INT PRIMARY KEY,
    Nome VARCHAR(255)
);

-- Tabela proprietario
CREATE TABLE proprietario (
    CPF VARCHAR(11) PRIMARY KEY,
    Nome VARCHAR(255),
    Estado VARCHAR(2),
    Sexo CHAR(1),
    DataNascimento DATE,
    Idade INT,
    EnderecoID INT,
    FOREIGN KEY (EnderecoID) REFERENCES endereco(id)
);

-- Tabela telefone
CREATE TABLE telefone (
    id INT PRIMARY KEY,
    num_telefone VARCHAR(20),
    CPF VARCHAR(11),
    FOREIGN KEY (CPF) REFERENCES proprietario(CPF)
);

-- Tabela tipoinfracao
CREATE TABLE tipoinfracao (
    TipoID INT PRIMARY KEY,
    Descricao VARCHAR(255),
    Valor DECIMAL(10, 2)
);

-- Tabela veiculos
CREATE TABLE veiculos (
    Placa VARCHAR(10) PRIMARY KEY,
    Chassi VARCHAR(17),
    CorPredominante VARCHAR(50),
    ModeloID INT,
    CategoriaID INT,
    AnoInfracao INT,
    CPF VARCHAR(11),
    FOREIGN KEY (ModeloID) REFERENCES modelo(ModeloID),
    FOREIGN KEY (CategoriaID) REFERENCES categoria(CategoriaID),
    FOREIGN KEY (CPF) REFERENCES proprietario(CPF)
);
